/* pages/payment-result/payment-result.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 40rpx 20rpx 160rpx;
}

.card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 支付结果 */
.result-section {
  text-align: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.result-icon {
  margin-bottom: 30rpx;
}

.icon {
  width: 120rpx;
  height: 120rpx;
}

.result-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.result-title {
  color: #4caf50;
}

.result-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.result-amount {
  font-size: 56rpx;
  font-weight: bold;
  color: #ff6b35;
}

/* 订单信息 */
.order-info {
  padding: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  max-width: 400rpx;
  word-break: break-all;
}

/* 提示信息 */
.tips-section {
  padding: 30rpx;
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tips-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.tips-content {
  padding-left: 55rpx;
}

.tips-content text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

/* 操作按钮 */
.actions-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.primary {
  background: #ff6b35;
  color: white;
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  padding: 20rpx 0;
}

.nav-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
  border: none;
  padding: 20rpx 10rpx;
  font-size: 24rpx;
  color: #666;
}

.nav-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
  color: #999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #ff6b35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}