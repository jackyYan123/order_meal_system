/* pages/menu/menu.wxss */
.container {
  padding-bottom: 120rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-input {
  flex: 1;
  height: 70rpx;
  padding: 0 30rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  font-size: 28rpx;
}

.search-cancel {
  margin-left: 20rpx;
  padding: 0 20rpx;
  background: none;
  border: none;
  color: #ff6b35;
  font-size: 28rpx;
}

/* 分类导航 */
.category-nav {
  display: flex;
  align-items: center;
  background-color: white;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 20rpx;
}

.category-scroll {
  flex: 1;
  white-space: nowrap;
}

.category-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.category-item.active {
  background-color: #ff6b35;
  color: white;
}

.search-btn {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  border: none;
}

/* 菜品容器 */
.dishes-container {
  padding: 20rpx;
}

/* 菜品项 */
.dish-item {
  display: flex;
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.dish-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-header {
  margin-bottom: 16rpx;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.dish-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.dish-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.dish-footer {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.price-section {
  flex: 1;
}

.dish-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b35;
}

.dish-stock {
  display: block;
  font-size: 24rpx;
  color: #faad14;
  margin-top: 8rpx;
}

.dish-stock.sold-out {
  color: #f5222d;
}

/* 购物车控制 */
.cart-controls {
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.2s ease-in-out;
  min-width: 180rpx;
  justify-content: flex-end;
}

.cart-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #ff6b35;
  background-color: white;
  color: #ff6b35;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  flex-shrink: 0;
  transition: all 0.2s ease-in-out;
}

.cart-btn.plus-btn {
  background-color: #ff6b35;
  color: white;
}

.cart-btn.minus-btn {
  background-color: white;
  color: #ff6b35;
}

.quantity {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  min-width: 40rpx;
  text-align: center;
  transition: all 0.2s ease-in-out;
  flex-shrink: 0;
}

/* 购物车悬浮按钮 */
.cart-float {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: #ff6b35;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.4);
  z-index: 1000;
}

.cart-icon {
  font-size: 48rpx;
  color: white;
}

.cart-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  min-width: 40rpx;
  height: 40rpx;
  background-color: #f5222d;
  color: white;
  border-radius: 20rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

/* 加载和空状态 */
.loading {
  text-align: center;
  padding: 60rpx;
  color: #666;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  color: #666;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}